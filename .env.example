# ── Binance Futures ──────────────────────────────────────────
# Get your keys at https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET=your_binance_secret
BINANCE_TESTNET=false          # use testnet for testing

# ── OpenAI ───────────────────────────────────────────────────
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini      # gpt-4o for better analysis (more expensive)

# ── Trading Mode ─────────────────────────────────────────────
# paper = signals only, no real orders (safe, for testing)
# live  = auto-execute real orders on Binance (real money!)
TRADING_MODE=paper
TRADE_BALANCE_USDT=100
MAX_OPEN_TRADES=10
MAX_SAME_DIRECTION=5          # max trades in same direction (anti-correlation)

# ── Entry ────────────────────────────────────────────────────
USE_1M_ENTRY=true
USE_LLM=true                  # false = ML only (no OpenAI calls)

# ── Re-entry ────────────────────────────────────────────────
# true = after closing SHORT on BNB, wait for LONG before shorting BNB again
# false = allow re-entry in same direction
NO_SAME_DIRECTION_REENTRY=false

# ── Dead Hours (optional) ───────────────────────────────────
# NYSE open hours are auto-detected (DST-aware)
# Add extra UTC hours to block (comma-separated), e.g. 0,1,2,3,4,5
# EXTRA_DEAD_HOURS=
